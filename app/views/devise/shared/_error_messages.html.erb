<% if resource.errors.any? %>
  <script>
     <% resource.errors.full_messages.each do |message| %>
      new noty ({
              type: 'error',
              layout: 'topRight',
              timeout: '3000',
              theme: 'sunset',
              text: '<%= message %>'
          }).show();
    <% end %>
  </script>
<% end %>
